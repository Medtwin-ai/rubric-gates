{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.medtwin.ai/rubric-gates/rubric.schema.json",
  "title": "Rubric Gates Rubric Suite Schema",
  "type": "object",
  "additionalProperties": true,
  "required": ["rubric_suite"],
  "properties": {
    "rubric_suite": {
      "type": "object",
      "additionalProperties": true,
      "required": ["id", "tier", "version", "checks"],
      "properties": {
        "id": { "type": "string" },
        "tier": { "type": "integer", "enum": [1, 2, 3] },
        "version": { "type": "string" },
        "purpose": { "type": "string" },
        "checks": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "required": ["id", "description", "check_type", "severity", "gate"],
            "properties": {
              "id": { "type": "string" },
              "description": { "type": "string" },
              "check_type": { "type": "string" },
              "severity": { "type": "string" },
              "gate": { "type": "string", "enum": ["approve", "revise", "block"] },
              "required_fixes": { "type": "array", "items": { "type": "string" } },
              "scoring": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                  "type": { "type": "string" },
                  "threshold": { "type": "number" }
                }
              }
            }
          }
        }
      }
    }
  }
}

